<script>
const TAVILY_KEY = "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"; 
const G = ["", "ä¹¾(å¤©)", "å…‘(æ³½)", "ç¦»(ç«)", "éœ‡(é›·)", "å·½(é£)", "å(æ°´)", "è‰®(å±±)", "å¤(åœ°)"];
const COLORS = ["", "#FFFFFF", "#F0E68C", "#FF4500", "#7B68EE", "#00FA9A", "#4169E1", "#D2B48C", "#708090"];

async function fetchData() {
    const target = document.getElementById('target').value;
    if(!target) return alert("è¯·æŒ‡å®šæ¨æ¼”ç›®æ ‡");
    const btn = document.getElementById('aiBtn');
    btn.disabled = true;
    btn.innerText = "â³ æ­£åœ¨çª¥æ¢å¤©æœº...";

    try {
        const response = await fetch('https://api.tavily.com/search', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                api_key: TAVILY_KEY,
                query: `${target} ç°çŠ¶ æ¼”åŒ–è§„å¾‹ æœ¬è´¨å½±å“ 2026 è¶‹åŠ¿`,
                search_depth: "basic",
                max_results: 3
            })
        });
        const data = await response.json();
        const res = data.results;
        
        document.getElementById('p_val').value = res[0] ? res[0].title.substring(0,12) : "æ—¶åºæµè½¬";
        document.getElementById('e_val').value = res[1] ? res[1].title.substring(0,12) : "æ ¼å±€å·²ç°";
        document.getElementById('t_val').value = res[2] ? res[2].title.substring(0,12) : "æ•°ç†æ¨æ¼”";
        document.getElementById('s_val').value = "ä¼—å¿ƒæ‰€å‘";
        alert("âœ¨ å¤©æœºå·²æ´å¯Ÿï¼Œè¯·å¼€å§‹æ¨æ¼”");
    } catch (err) {
        alert("æ—¶ç©ºæ‰°åŠ¨ï¼Œè¯·ç¨åå†è¯•");
    } finally {
        btn.disabled = false;
        btn.innerText = "ğŸŒ€ æ‹¨åŠ¨æ—¶ç©ºå¼•åŠ›";
    }
}

function hash(s) {
    let r = 0;
    for(let i=0; i<s.length; i++) r = (r << 5) - r + s.charCodeAt(i);
    return Math.abs(r);
}

function runInference() {
    const p = document.getElementById('p_val').value;
    const upG = (hash(p + document.getElementById('e_val').value) % 8) + 1;
    const lowG = (hash(document.getElementById('t_val').value) % 8) + 1;
    
    document.documentElement.style.setProperty('--main', COLORS[upG]);
    document.getElementById('resultArea').style.display = 'block';
    document.getElementById('exportBtn').style.display = 'block';
    
    document.getElementById('resGua').innerText = `${G[upG]} Â· ${G[lowG]}`;
    document.getElementById('resJudge').innerText = `å¤©æ—¶å‘ˆç°ã€Œ${G[upG]}ã€ä¹‹ç›¸ï¼Œç¥æœºè•´å«ã€Œ${G[lowG]}ã€ä¹‹èƒ½ã€‚ä¸‡ç‰©æ¼”åŒ–å·²å…¥ç‰¹å®šè½¨é“ã€‚`;
    document.getElementById('resRisk').innerText = `éœ€å…³æ³¨ã€Œ${p.substring(0,6)}ã€å¸¦æ¥çš„èƒ½é‡æ¶Ÿæ¼ªï¼Œé˜²æ­¢åç¦»æ ¸å¿ƒæ„¿æ™¯ã€‚`;
    document.getElementById('resAdvice').innerText = `å½“ä¸‹å®œ${upG < 4 ? 'é›·å‰é£è¡Œï¼Œä¸»åŠ¨ç ´å±€' : 'æ·±æŒ–å¹¿ç§¯ï¼Œé™å¾…æ—¶å˜'}ã€‚`;
    
    gtag('event', 'universal_inference', { 'target': document.getElementById('target').value });
}

async function exportReport() {
    const area = document.getElementById('captureArea');
    const b1 = document.getElementById('exportBtn');
    const b2 = document.getElementById('aiBtn');
    b1.style.opacity = '0'; b2.style.opacity = '0';
    try {
        const canvas = await html2canvas(area, { backgroundColor: '#050505', scale: 2 });
        const link = document.createElement('a');
        link.href = canvas.toDataURL("image/png");
        link.download = `å¤©æœºå›¾-${new Date().getTime()}.png`;
        link.click();
    } catch (e) { alert("æˆªå›¾å¤±è´¥"); }
    finally { b1.style.opacity = '1'; b2.style.opacity = '1'; }
}
